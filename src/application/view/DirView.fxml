<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <ScrollPane fitToWidth="true" style="-fx-border-color: transparent;" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="filesPane" prefWidth="100.0" styleClass="background" />
         </content>
      </ScrollPane>
   </center>
   <top>
      <Label fx:id="dirName" styleClass="infotext" text="Label" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
