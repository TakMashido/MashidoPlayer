<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <ScrollPane fx:id="scrollPane" fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="albumsPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="background" />
         </content>
      </ScrollPane>
   </center>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Button mnemonicParsing="false" onAction="#add" styleClass="tile-button" text="Add" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <Label styleClass="infotext" text="Albums" BorderPane.alignment="CENTER" />
         </center>
         <left>
            <ToggleButton mnemonicParsing="false" onAction="#delete" styleClass="tile-button" text="Delete" BorderPane.alignment="CENTER" />
         </left>
      </BorderPane>
   </top>
</BorderPane>
